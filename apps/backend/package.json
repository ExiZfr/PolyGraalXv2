{
    "name": "@polygraalx/backend",
    "version": "0.1.0",
    "private": true,
    "description": "PolyGraalX Backend API and Indexer",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && tsc-alias",
        "start": "node dist/index.js",
        "lint": "eslint src --ext .ts",
        "test": "vitest",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.0",
        "@fastify/helmet": "^11.0.0",
        "@fastify/rate-limit": "^9.0.0",
        "@fastify/websocket": "^10.0.0",
        "drizzle-orm": "^0.30.0",
        "fastify": "^4.25.0",
        "ioredis": "^5.3.0",
        "jose": "^5.2.0",
        "pg": "^8.11.0",
        "pino": "^8.17.0",
        "viem": "^2.0.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@polygraalx/config": "workspace:*",
        "@polygraalx/shared": "workspace:*",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.10.0",
        "drizzle-kit": "^0.21.0",
        "eslint": "^8.56.0",
        "tsc-alias": "^1.8.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0",
        "vitest": "^1.2.0"
    }
}