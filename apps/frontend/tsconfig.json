{
    "extends": "@polygraalx/config/tsconfig/nextjs.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@components/*": [
                "./components/*"
            ],
            "@hooks/*": [
                "./hooks/*"
            ],
            "@lib/*": [
                "./lib/*"
            ],
            "@providers/*": [
                "./providers/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}