# ================================
# PolyGraalX Environment Variables
# ================================
# Copy this file to .env and fill in the values

# ===================
# GENERAL
# ===================
NODE_ENV=development
LOG_LEVEL=debug

# ===================
# NETWORK
# ===================
# Polygon Mainnet or Mumbai Testnet
CHAIN_ID=137
RPC_URL=https://polygon-rpc.com
# Alternative: https://rpc.ankr.com/polygon

# ===================
# DATABASE
# ===================
# PostgreSQL Connection
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=polygraalx
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=polygraalx
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Connection
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ===================
# BACKEND API
# ===================
API_PORT=4000
API_HOST=0.0.0.0
JWT_SECRET=your_jwt_secret_here_min_32_chars_long
CORS_ORIGIN=http://localhost:3000

# ===================
# FRONTEND
# ===================
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_CHAIN_ID=137
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ===================
# CONTRACTS
# ===================
# Deployer private key (DO NOT COMMIT!)
DEPLOYER_PRIVATE_KEY=
# Polygonscan API key for verification
POLYGONSCAN_API_KEY=

# Contract Addresses (filled after deployment)
PERPETUAL_ENGINE_ADDRESS=
VAMM_ADDRESS=
MARKET_REGISTRY_ADDRESS=
INSURANCE_FUND_ADDRESS=

# ===================
# INDEXER
# ===================
# Block to start indexing from
INDEXER_START_BLOCK=0
# Polling interval in ms
INDEXER_POLL_INTERVAL=2000

# ===================
# DOMAIN (Production)
# ===================
DOMAIN=polygraalx.com
SSL_EMAIL=admin@polygraalx.com
